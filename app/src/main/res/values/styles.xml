<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LandingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EventsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/eventsPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="CreditsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/creditsPrimary</item>
        <item name="colorPrimaryDark">@color/creditsPrimaryDark</item>
    </style>


    <style name="NewsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/newsPrimary</item>
        <item name="colorPrimaryDark">@color/newsPrimaryDark</item>
    </style>


    <style name="ContentImageBadgeTitle" parent="AppTheme">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ContentImageBadgeText" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ContentMainBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/contentBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TitleBadgeText" parent="AppTheme">
        <item name="android:textColor">@color/titleBadgeText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/titleBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LandingPagecardview" parent="AppTheme">
        <item name="android:layout_height">124dp</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="LandingPageCenterCard" parent="AppTheme">
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_width">250dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="collapsingtoolbarexpandedtitle" parent="AppTheme">
        <item name="android:textColor">#f8f8ff</item>
    </style>
    <style name="collapsingtoolbarcollapsedtitle" parent="AppTheme">
     <item name="android:textColor">#f8f8ff</item>
     <item name="android:gravity">left</item>
    </style>



    <style name="thin.white" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="thin.white.large" parent="thin.white">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="thin.white.small" parent="thin.white">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="thin.white.small.button" parent="thin.white.small">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>



</resources>
