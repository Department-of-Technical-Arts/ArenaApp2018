<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context="com.dota.arena18.SplashActivity">

    <com.jaredrummler.android.widget.AnimatedSvgView
        android:id="@+id/animated_svg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        app:animatedSvgFillColors="@array/arena_colors"
        app:animatedSvgGlyphStrings="@array/arena_strings"
        app:animatedSvgFillStart="1200"
        app:animatedSvgFillTime="200"
        app:animatedSvgImageSizeX="1000"
        app:animatedSvgImageSizeY="1000"
        app:animatedSvgTraceTime="1000"
        app:animatedSvgTraceTimePerGlyph="500"/>

</RelativeLayout>
