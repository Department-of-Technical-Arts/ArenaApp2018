<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gjiazhe.panoramaimageview.PanoramaImageView
        android:id="@+id/panorama_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home"
        app:piv_enablePanoramaMode="true"
        app:piv_invertScrollDirection="false"
        app:piv_show_scrollbar="false" />


    <com.szugyi.circlemenu.view.CircleLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isRotating="false"
        app:firstChildPosition="North">


        <android.support.v7.widget.CardView
            android:id="@+id/card_events"
            android:clickable="true"
            android:focusable="true"
            style="@style/LandingPagecardview"
            app:cardBackgroundColor="@color/landing_tint_color"
            android:foreground="?android:attr/selectableItemBackground"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="45dp"
            app:cardCornerRadius="62dp">

            <ImageView
                app:srcCompat="@drawable/landing_events"
                android:layout_gravity="top|center"
                android:layout_marginTop="18dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:paddingBottom="24dp"
                android:fontFamily="@font/lato_bold"
                android:text="Events"
                android:textColor="@color/landing_text_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_about"
                style="@style/LandingPagecardview"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/landing_tint_color"
                app:cardCornerRadius="62dp">

                <ImageView
                    app:srcCompat="@drawable/landing_about"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="18dp"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:paddingBottom="24dp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/landing_text_color"
                    android:text="About us"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_contacts"
            style="@style/LandingPagecardview"
            app:cardBackgroundColor="@color/landing_tint_color"
            android:foreground="?android:attr/selectableItemBackground"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="45dp"
            app:cardCornerRadius="62dp">

            <ImageView
                app:srcCompat="@drawable/landing_contacts"
                android:layout_gravity="top|center"
                android:layout_marginTop="18dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato_bold"
                android:text="Contact"
                android:textColor="@color/landing_text_color"
                android:gravity="bottom|center"
                android:paddingBottom="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_credits"
            style="@style/LandingPagecardview"
            app:cardBackgroundColor="@color/landing_tint_color"
            android:foreground="?android:attr/selectableItemBackground"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="45dp"
            app:cardCornerRadius="62dp">

            <ImageView
                app:srcCompat="@drawable/landing_credits"
                android:layout_gravity="top|center"
                android:layout_marginTop="18dp"
                android:layout_width="56dp"
                android:layout_height="56dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato_bold"
                android:gravity="bottom|center"
                android:paddingBottom="24dp"
                android:text="Credits"
                android:textColor="@color/landing_text_color"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_news"
                style="@style/LandingPagecardview"
                app:cardBackgroundColor="@color/landing_tint_color"
                android:foreground="?android:attr/selectableItemBackground"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="45dp"
                app:cardCornerRadius="62dp">

                <ImageView
                    app:srcCompat="@drawable/landing_news"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="18dp"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:paddingBottom="24dp"
                    android:text="News"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/landing_text_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            </android.support.v7.widget.CardView>



    </com.szugyi.circlemenu.view.CircleLayout>


</FrameLayout>