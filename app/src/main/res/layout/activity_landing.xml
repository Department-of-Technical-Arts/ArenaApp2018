<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gjiazhe.panoramaimageview.PanoramaImageView
        android:id="@+id/panorama_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/download_landing_compressed3"
        app:piv_enablePanoramaMode="true"
        app:piv_invertScrollDirection="false"
        app:piv_show_scrollbar="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_about"
                style="@style/LandingPagecardview"
                app:cardBackgroundColor="#89800080">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/landing_text_color"
                    android:text="About"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_news"
                style="@style/LandingPagecardview"
                app:cardBackgroundColor="#8900FF00"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="45dp">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="news"
                    android:textColor="@color/landing_text_color"
                    android:background="?android:attr/selectableItemBackground"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_events"
                style="@style/LandingPagecardview"
                app:cardBackgroundColor="#890000FF"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="45dp">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Events"
                    android:textColor="@color/landing_text_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_credits"
                style="@style/LandingPagecardview"
                app:cardBackgroundColor="#89FF0000"
                tools:layout_editor_absoluteX="213dp"
                tools:layout_editor_absoluteY="45dp">

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Credits"
                    android:textColor="@color/landing_text_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_contacts"
                style="@style/LandingPagecardview"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#89FF7700"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="45dp">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Contacts"
                    android:textColor="@color/landing_text_color"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>