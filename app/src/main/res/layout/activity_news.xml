<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dota.arena18.activities.NewsActivity">

    <Button
        android:id="@+id/btn_tally"
        android:text="Medals Tally"
        android:onClick="openTally"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_feed"
        android:text="Live Feed"
        android:layout_below="@id/btn_tally"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_news"
        android:text="Newsletters"
        android:layout_below="@id/btn_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_tweets"
        android:text="Tweets"
        android:onClick="openTweets"
        android:layout_below="@id/btn_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
